{
  "profile_version": "1.0",
  "last_updated": "2026-02-07",
  "description": "사용자의 현재 개발 환경 프로파일 - 릴리스 분석에 활용",
  
  "cli_tool": {
    "name": "OpenCode",
    "type": "Terminal CLI",
    "version": "latest",
    "plugins": [
      "opencode-antigravity-auth@beta",
      "oh-my-opencode@latest",
      "@tarquinen/opencode-dcp@latest"
    ]
  },
  
  "mcp_servers": {
    "playwright": {
      "description": "브라우저 자동화 및 테스트",
      "package": "@playwright/mcp",
      "keywords": ["browser", "automation", "testing", "screenshot", "web"]
    },
    "filesystem": {
      "description": "파일 시스템 접근",
      "package": "@modelcontextprotocol/server-filesystem",
      "keywords": ["file", "directory", "read", "write"]
    },
    "context7": {
      "description": "라이브러리 문서 검색",
      "package": "context7 (remote)",
      "keywords": ["docs", "documentation", "library", "api"]
    },
    "sequential-thinking": {
      "description": "단계별 사고 및 분석",
      "package": "@modelcontextprotocol/server-sequential-thinking",
      "keywords": ["thinking", "reasoning", "analysis"]
    },
    "github": {
      "description": "GitHub API 연동",
      "package": "@modelcontextprotocol/server-github",
      "keywords": ["github", "git", "repository", "pr", "issue"]
    },
    "memory": {
      "description": "지식 그래프 저장",
      "package": "@modelcontextprotocol/server-memory",
      "keywords": ["memory", "knowledge", "graph", "entity"]
    },
    "notion-epic-tracker": {
      "description": "Notion 에픽 트래커 연동",
      "package": "custom (notion-epic-tracker)",
      "keywords": ["notion", "epic", "tracker", "project"]
    }
  },
  
  "ai_models": {
    "claude-opus-4.6": {
      "usage": ["sisyphus", "prometheus", "metis", "momus"],
